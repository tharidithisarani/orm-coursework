            <Font name="System Bold" size="14.0" />
         </font></TextField>
      <Button contentDisplay="GRAPHIC_ONLY" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#btnBackOnAction" prefHeight="46.0" prefWidth="49.0" style="-fx-background-color: tra;" text="Button">
         <graphic>
            <ImageView fitHeight="49.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assects/images/emojione-v1--back-arrow.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <TextField fx:id="useremail" layoutX="58.0" layoutY="314.0" onKeyReleased="#txtuserEmailKeyRealesedOnAction" prefHeight="38.0" prefWidth="320.0" promptText="Gmail (@gmail.com)" styleClass="input" stylesheets="@../assects/CSS/style.css">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></TextField>
      <Text fill="#0a3981" layoutX="27.0" layoutY="153.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Registration">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Text>
