         </graphic>
      </Button>
      <TextField fx:id="telNo" layoutX="58.0" layoutY="193.0" onKeyReleased="#txtuserTelNoKeyRealesedOnAction" prefHeight="38.0" prefWidth="320.0" promptText="Contact Number (0782491250)" styleClass="input" stylesheets="@../assects/CSS/style.css">
