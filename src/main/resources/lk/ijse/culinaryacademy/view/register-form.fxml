<AnchorPane fx:id="childNode" prefHeight="560.0" prefWidth="440.0" styleClass="pane" stylesheets="@../assects/CSS/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.culinaryacademy.controller.RegisterFormController">
   <children>
      <TextField fx:id="username" layoutX="58.0" layoutY="253.0" onKeyReleased="#txtuserNameKeyRealesedOnAction" prefHeight="38.0" prefWidth="320.0" promptText="Full Name" styleClass="input" stylesheets="@../assects/CSS/style.css">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></TextField>
      <PasswordField fx:id="passwrod" layoutX="57.0" layoutY="367.0" onKeyReleased="#txtuserPasswordKeyRealesedOnAction" prefHeight="38.0" prefWidth="320.0" promptText="Password" styleClass="input" stylesheets="@../assects/CSS/style.css">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></PasswordField>
      <Button fx:id="register" layoutX="16.0" layoutY="461.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" prefHeight="43.0" prefWidth="407.0" styleClass="buttonlogin" stylesheets="@../assects/CSS/login.css" text="    Register">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assects/images/mdi--register-outline.png" />
               </image>
